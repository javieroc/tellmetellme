---
import "../styles/global.css";
import Hero from "./Hero.astro";
import Navbar from "./Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/portfolio-astro/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="min-h-screen bg-[#f8f8ff] text-black antialiased">
    <main class="max-w-4xl mx-auto px-6 py-2">
      <Navbar />
      <Hero
        title="Tell Me Tell Me"
        subtitle="Stories from shared desks and shared lives"
        description="A place to collect and share stories about working side by side — in coworking spaces, studios, cafés, and anywhere workaholics become workahomies."
      />
      <slot />
    </main>
  </body>
</html>
