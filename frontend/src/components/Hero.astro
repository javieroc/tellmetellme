---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  frame?: string;
}

const {
  title,
  subtitle,
  description,
  frame = "/shapes/hero1.svg"
} = Astro.props;
---

<section
  class="card-frame w-full min-h-[320px] flex items-center"
  style={`--card-frame-url: url('${frame}')`}
>
  <div
    class="
      w-full
      flex justify-end
      py-10
      px-6
    "
  >
    <div
      class="
        bg-white
        rounded-xl
        p-6
        max-w-sm
        opacity-80
        text-center
      "
    >
      <h1 class="font-uncial text-2xl leading-tight text-black">
        {title}
      </h1>

      <h2 class="font-uncial mt-3 text-lg md:text-xl text-gray-700">
        {subtitle}
      </h2>

      <p class="font-body mt-6 text-gray-600">
        {description}
      </p>
    </div>
  </div>
</section>
