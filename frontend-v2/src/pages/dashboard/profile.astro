---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
---

<DashboardLayout>
  <div class="max-w-2xl space-y-8">
    <h1 class="text-2xl font-semibold text-neutral-900">Profile</h1>

    <!-- Author -->
    <section class="rounded-xl border border-neutral-200 bg-white p-6">
      <h2 class="mb-4 text-lg font-medium text-[#2B6CB0]">Author Profile</h2>

      <form id="author-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-neutral-700">
            Display name
          </label>
          <input
            id="author-name"
            class="
              mt-1 w-full rounded-lg border border-neutral-300
              px-3 py-2 text-sm
              focus:border-[#2B6CB0] focus:ring-2 focus:ring-[#2B6CB0]/30
            "
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-neutral-700">
            Public email
          </label>
          <input
            id="author-email"
            type="email"
            class="
              mt-1 w-full rounded-lg border border-neutral-300
              px-3 py-2 text-sm
              focus:border-[#2B6CB0] focus:ring-2 focus:ring-[#2B6CB0]/30
            "
          />
        </div>
      </form>
    </section>

    <div class="flex justify-end">
      <button
        id="save-profile"
        class="
          rounded-lg
          bg-[#2B6CB0]
          px-6 py-2
          text-sm font-semibold text-white
          transition
          hover:bg-[#2C5282]
          active:scale-95
        "
      >
        Save changes
      </button>
    </div>

    <script src="../../scripts/profile.ts"></script>
  </div>
</DashboardLayout>
